<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:w="urn:import:client.ui.components"
  xmlns:i="urn:import:client.ui.views.interval">

  <g:FlowPanel styleName="viewport" ui:field="viewport">
    <g:HTMLPanel styleName="header slidedown">
      Indicator Explorer
    </g:HTMLPanel>

    <g:FlowPanel ui:field="overlay" styleName="overlay">
      <g:FlowPanel ui:field="seriesAnchors"
          styleName="anchors anchors-right fadein">
      </g:FlowPanel>

      <i:IntervalSwitch ui:field="seriesInterval"
          styleName="anchors anchors-left fadein">
      </i:IntervalSwitch>
    </g:FlowPanel>

    <g:FlowPanel styleName="container fadein">
      <g:TabLayoutPanel ui:field="indicatorPanel" barHeight="50"
          addStyleNames="column column-sidebar">
      </g:TabLayoutPanel>

      <g:TabLayoutPanel ui:field="seriesPanel" barHeight="50"
          addStyleNames="column column-content">
      </g:TabLayoutPanel>

      <g:TabLayoutPanel ui:field="countryPanel" barHeight="50"
          addStyleNames="column column-sidebar">
      </g:TabLayoutPanel>
    </g:FlowPanel>
  </g:FlowPanel>
</ui:UiBinder>
